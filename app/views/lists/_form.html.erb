<%= simple_form_for(list) do |f| %>
  <h2 >Add New List:</h2>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :resume %>
    <%= f.input :image, as: :file, required: true %>
  </div>
  <%= f.input :user_id, as: :hidden, input_html:{value: current_user.id} %>

  <h3>Add Some Movies:</h3>
  <div class="form-inputs">
    <%= f.input :movies_array, label: "Movies", collection: Movie.all, input_html:{ multiple:true, data:{ controller: "tom-select"}}%>
  </div>

  <div class="form-actions">
      <%= f.button :submit, 'Store it', class:'btn btn-danger'%>
  </div>
<% end %>
